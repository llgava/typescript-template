{
  "name": "typescript-template",
  "version": "1.0.0",
  "main": "./build/src/index.js",
  "description": "A small description about the project.",
  "keywords": [ "JavaScript", "TypeScript" ],
  "author": "llgava <llgavamt@gmail.com>",
  "license": "MIT",

  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "build": "babel ./src --extensions \".js,.ts\" --out-dir ./build/src --copy-files --no-copy-ignored",
    "start": "node ./build/src/index.js"
  },

  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/node": "^16.0.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/llgava/typescript-template.git"
  }
}
